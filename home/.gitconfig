[include]
    path = ~/.gitconfig.local

[user]
    email = lambdalisue@hashnote.net
    name  = lambdalisue

[core]
    excludesfile = ~/.gitignore
    editor = vim
    pager = "lv"
    quotepath = false

[color]
    ui = auto

[hub]
    protocol = https

[github]
    user = lambdalisue

[push]
    default = current

[branch]
    autosetupmerge = always

[alias]
    graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    remove-remote = !sh -c 'git push origin :$0'
    remove = !sh -c 'git branch -d $0 && git push origin :$0'
    changelog = !python /Users/alisue/.gittag-changelog/src/gittag_changelog.py
    changelog-latest = !python /Users/alisue/.gittag-changelog/src/gittag_changelog.py --latest-only
    changelog-head = !python /Users/alisue/.gittag-changelog/src/gittag_changelog.py --include-head
    changelog-latest-head = !python /Users/alisue/.gittag-changelog/src/gittag_changelog.py --latest-only --include-head

[ghq]
    root = ~/.ghq
    root = ~/.go/src
[filter "lfs"]
	smudge = git-lfs smudge %f
	required = true
	clean = git-lfs clean %f
