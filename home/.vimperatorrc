" Swap ; and : for US keyboard
nnoremap ; :
nnoremap : ;
vnoremap ; :
vnoremap : ;

" Use <A-i> to launch the external editor
inoremap <A-i> <C-i>

" Use mvim
set editor=/usr/local/bin/mvim

nnoremap <C-n> gt
nnoremap <C-p> gT
nnoremap <C-t> :<C-u>tabnew<CR>

cnoremap <C-n> <Tab>
cnoremap <C-p> <S-Tab>

nnoremap <C-e> 5<C-e>
nnoremap <C-y> 5<C-y>

nnoremap ,,r :<C-u>source ~/.vimperatorrc<CR>

set ignorecase
set smartcase

set hintchars=abcdefghijklmnopqrstuvwxyz
highlight Hint -append font-size:20px;

ignorekeys clear
ignorekeys add localhost:9999
ignorekeys add localhost:8888
ignorekeys add localhost:8000
ignorekeys add lambdalisue.github.io/rehighlight
ignorekeys add nup-lpmns
ignorekeys add karyo-lpmns

source! ~/.vimperatorrc.local
echomsg '~/.vimperatorrc has loaded.'
