" Show Menubar, Navigation bar and Bookmark bars
set guioptions& guioptions+=TB

" Note:
"   gvim is aliased in my zshrc in Mac OS X
set editor='zsh -lc "gvim -f +<line> +"silent! call cursor(0, <column>)" <file>"'

" Add Japanese prev/next
set previouspattern='\bprev|previous|前\b',^<$,'^(<<|«)$','^(<|«)','(<|«)'$
set nextpattern='\bnext|次\b',^>$,'^(>>|»)$','^(>|»)','(>|»)$','\bmore\b'

