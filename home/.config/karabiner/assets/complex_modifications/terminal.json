{
  "title": "Terminal.app",
  "rules": [
    {
      "description": "Replace Ctrl+6 -> Ctrl+^ in Terminal",
      "manipulators": [
        {
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$"
              ]
            }
          ],
          "from": {
            "key_code": "6",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "6",
              "modifiers": [
                "left_shift",
                "left_control"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
