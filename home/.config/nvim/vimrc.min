" vim -u ~/.vim/vimrc.min
if has('vim_starting')
  set nocompatible
  " set runtimepath+=~/Code/github.com/lambdalisue/dein.vim
endif

set hidden

nnoremap ; :
nnoremap : ;

filetype plugin indent on
syntax on

" --- Utilities --------------------------------------------------------------
function! s:echo_runtimepath() abort
  for path in split(&runtimepath, ',')
    echo path
  endfor
endfunction
command! EchoRuntimePath call s:echo_runtimepath()
